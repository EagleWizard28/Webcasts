<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - My ASP.NET MVC Application</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    <style type="text/css">
        body
        {
            padding-top: 60px;
            padding-bottom: 40px;
        }
    </style>
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Dominion Card Tracker", "Index", "Home", null, new{@class="brand"})
                <div class="nav-collapse collapse">
                    <ul class="nav">
                        <li>@Html.ActionLink("Browse Cards", "Browse", "Cards")</li>
                        <li>@Html.ActionLink("Generate Random Set", "Random", "Cards")</li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Admin <b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Card Sets", "Index", "CardSet")</li>
                                <li>@Html.ActionLink("Categories", "Index", "Category")</li>
                                <li>@Html.ActionLink("Modifier Types", "Index", "ModifierType")</li>
                                <li class="divider"></li>
                                <li>@Html.ActionLink("Cards", "Index", "Cards")</li>
                            </ul>
                        </li>
                        @if (!Request.IsAuthenticated)
                        {
                            <li>@Html.ActionLink("Register", "Register", "Account")</li>
                            <li>@Html.ActionLink("Log In", "Login", "Account")</li>
                        }
                        else
                        {
                            <li>@Html.ActionLink("Manage Account", "Manage", "Account")</li>
                        }
                    </ul>
                </div>
                <!--/.nav-collapse -->
            </div>
        </div>
    </div>
    <div class="container">
        @RenderBody()
        <hr>

        <footer>
            <p>&copy; Company 2013</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
