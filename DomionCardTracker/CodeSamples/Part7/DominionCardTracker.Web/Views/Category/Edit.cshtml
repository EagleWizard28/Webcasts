@model DominionCardTracker.Models.Tables.Category

@{
    ViewBag.Title = "Edit";
}

<div class="row">
    @using (Html.BeginForm("Edit", "Category", FormMethod.Post, new {@class = "span4"}))
    {
        <fieldset>
            <legend>Edit Category</legend>
            @Html.HiddenFor(m=>m.CategoryID)
            <div class="control-group">
                <label>Category Name</label>
                @Html.TextBoxFor(m=>m.CategoryName, new{placeholder="enter category name"})
            </div>
            <div class="form-actions">
                <button type="submit" class="btn btn-primary">Save Changes</button>
                @Html.ActionLink("Cancel", "Index", "Category", null, new{@class="btn"})
            </div>
        </fieldset>
    }

</div>
