@model DominionCardTracker.Models.Tables.CardSet

@{
    ViewBag.Title = "Create";
}

<div class="row">
    @using (Html.BeginForm("Create", "CardSet", FormMethod.Post, new {@class = "span4"}))
    {
        <fieldset>
            <legend>Create Card Set</legend>
            <div class="control-group">
                <label>Card Set Name</label>
                @Html.TextBoxFor(m=>m.CardSetName, new{placeholder="enter set name"})
            </div>
            <div class="form-actions">
                <button type="submit" class="btn btn-primary">Save Changes</button>
                @Html.ActionLink("Cancel", "Index", "CardSet", null, new{@class="btn"})
            </div>
        </fieldset>
    }

</div>
